#!/usr/bin/env bash
generate_password() {
    local length=$1
    if ! [[ "$length" =~ ^[0-9]+$ ]] || [ "$length" -le 0 ]; then
        echo "Error: Please provide a valid positive integer for password length."
        return 1
    fi
    password=$(tr -dc 'A-Za-z0-9!@#$%^&*()-_=+{}[]<>?/|~' < /dev/urandom | head -c "$length")
    
    echo "$password"
}
echo "Generated Password: $(generate_password 12)"