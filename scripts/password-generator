#!/usr/bin/env bash

generate_password() {
    local length=$1
    if [[ -z "$length" || "$length" -le 0 ]]; then
        echo "Invalid length. Please provide a positive number."
        return 1
    fi
    
    tr -dc 'A-Za-z0-9!@#$%^&*()_+=' </dev/urandom | head -c "$length"
    echo
}

password=$(generate_password 12)
echo "Generated Password: $password"
