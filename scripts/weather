#!/usr/bin/env bash

# TODO: Display weather of IIIT, Lucknow
# For more information see: https://wttr.in/:help

location="IIIT Lucknow"

# If a location is provided, use it instead
[ $# -gt 0 ] && location="$*"

# Fetch and display the weather information
echo "Fetching weather for: $location..."
curl -s "wttr.in/${location// /+}?format=3"
