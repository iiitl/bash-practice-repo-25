#!/usr/bin/env bash
cpu_temp=$(grep -E 'Tctl|Tdie|Package id' /sys/class/hwmon/hwmon*/temp*_label | head -n1 | cut -d':' -f1 | sed 's/label/input/' | xargs cat)

cpu_temp_C=$((cpu_temp/1000))

cpu_temp_F=$(((cpu_temp_C*9)/5+32))

echo "temp in Celsius:$cpu_temp_C°C"
echo "temp in Fahrenheit:$cpu_temp_F°F"