
#!/usr/bin/env bash

# Get the CPU temperature in millidegrees Celsius
temp_mC=$(grep -E 'Tctl|Tdie|Package id' /sys/class/hwmon/hwmon*/temp*_label | head -n1 | cut -d':' -f1 | sed 's/label/input/' | xargs cat)

# Convert to degrees Celsius
temp_C=$(echo "scale=1; $temp_mC / 1000" | bc)

# Convert to Fahrenheit
temp_F=$(echo "scale=1; ($temp_C * 9 / 5) + 32" | bc)

# Display the results
echo "Celsius: $temp_C C"
echo "Fahrenheit: $temp_F F"
