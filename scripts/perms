#!/usr/bin/env bash

# TODO: Make it print out permissions of the given files in octal format
#
if [ "$#" -eq 0 ]; then
    exit 1
fi

for file in "$@"; do
    if [ -e "$file" ]; then
        perms=$(stat -c "%a" "$file")
        echo "$file: $perms"
    else
        echo "$file: No such file"
    fi
done

# E.g.:
# $ perms weather ../README.md
# 775 weather
# 664 ../README.md

