#!/usr/bin/env bash

# TODO (Run this script as): color magenta && echo hello && color reset

color() {
    echo -ne "\033[$1;$2m"
}

declare -A color_mapping=(
    # TODO: Add more color values
    # Refer bash color codes
    ['black']=30
    ['red']=31
    ['green']=32
    ['yellow']=33
    ['blue']=34
    ['magenta']=35
    ['cyan']=36
    ['light_gray']=37
    ['gray']=90
    ['light_red']=91
    ['light_green']=92
    ['light_yellow']=93
    ['light_blue']=94
    ['light_magenta']=95
    ['light_cyan']=96
    ['white']=97
)

if [[ $1 == 'reset' ]]; then
    color 0 00
elif [[ $1 == 'rgb' ]]; then
     echo -ne "\033[38;2;$2;$3;$4m"
else
    color 1 ${color_mapping[$1]}
fi