#!/usr/bin/env bash
color() {
    echo -ne "\033[$1;$2m"
}

# I added more color values
declare -A color_mapping=( 
    ['black']=30
    ['red']=31
    ['green']=32
    ['yellow']=33
    ['blue']=34
    ['magenta']=35
    ['cyan']=36
    ['silver']=37
    ['light gray']=90
     
)

  if [[ $1 == 'reset' ]]; then
    color 0 00
 else
    color 1 ${color_mapping[$1]}
 fi

