 #!/usr/bin/env bash
color() {
    echo -ne "\033[$1m"
}
declare -A colors=(
    ['red']=31 
    ['green']=32 
    ['yellow']=33 
    ['blue']=34 
    ['magenta']=35 
    ['reset']=0
)
if [[ -z "$1" ]]; then
    echo "Please provide a color. Available colors: ${!colors[@]}"
    exit 1
fi
if [[ -z "${colors[$1]}" ]]; then
    echo "Invalid color. Available colors: ${!colors[@]}"
    exit 1
fi
color "1;${colors[$1]}"
