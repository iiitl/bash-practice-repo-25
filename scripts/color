#!/usr/bin/env bash

# TODO (Run this script as): color magenta && echo hello && color reset

color() {
    echo -ne "\033[$1;$2m"
}

declare -A color_mapping=(
    ['black']=30
    ['red']=31
    ['green']=32
    ['yellow']=33
    ['blue']=34
    ['magenta']=35
    ['cyan']=36
    ['white']=37
)

if [[ $1 == 'reset' ]]; then
    color 0 00
elif [[ -n "${color_mapping[$1]}" ]]; then
    color 1 ${color_mapping[$1]} 
else
    echo "Invalid color. The available colors are: ${!color_mapping[@]}" 
fi

